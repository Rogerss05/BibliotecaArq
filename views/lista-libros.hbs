<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <title>Gestión de Libros</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-slate-900 text-white font-sans p-10">
    <div class="max-w-6xl mx-auto">
        <div class="flex justify-between items-center mb-8">
            <h1 class="text-3xl font-bold text-cyan-400">Catálogo Interno</h1>
            <div class="space-x-4">
                <a href="/libros/admin" class="text-slate-400 hover:text-white">Regresar al Panel</a>
                <a href="/libros/crear"
                    class="bg-cyan-600 hover:bg-cyan-500 px-4 py-2 rounded-lg font-bold shadow-lg transition">
                    + Nuevo Libro
                </a>
            </div>
        </div>

        <div class="bg-slate-800 rounded-xl border border-slate-700 overflow-hidden shadow-2xl">
            <table class="w-full text-left">
                <thead class="bg-slate-700 text-slate-300 uppercase text-xs">
                    <tr>
                        <th class="px-6 py-4">Título</th>
                        <th class="px-6 py-4">Género</th>
                        <th class="px-6 py-4 text-right">Acciones</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-700">
                    {{#each libros}}
                    <tr class="hover:bg-slate-700/50 transition">
                        <td class="px-6 py-4 font-bold text-white">{{this.titulo}}</td>
                        <td class="px-6 py-4 text-slate-400">{{this.genero}}</td>
                        <td class="px-6 py-4 text-right">
                            <form action="/libros/eliminar/{{this.id}}" method="post" class="form-eliminar">
                                <button type="submit"
                                    class="text-red-400 hover:text-red-300 text-sm font-bold flex items-center justify-end ml-auto">
                                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16">
                                        </path>
                                    </svg>
                                    Eliminar
                                </button>
                            </form>
                            <a href="/libros/editar/{{this.id}}"
                                class="text-cyan-400 hover:text-cyan-300 font-bold text-sm flex items-center justify-end ml-auto mb-2">
                                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z">
                                    </path>
                                </svg>
                                Editar
                            </a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            {{#unless libros}}
            <div class="p-8 text-center text-slate-500">No hay libros registrados en tu catálogo local.</div>
            {{/unless}}
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        // Buscamos todos los formularios que tengan la clase 'form-eliminar'
        const formularios = document.querySelectorAll('.form-eliminar');

        formularios.forEach(form => {
            form.addEventListener('submit', function (e) {
                e.preventDefault(); // Detenemos el envío automático

                Swal.fire({
                    title: '¿Estás seguro?',
                    text: "¡No podrás revertir esta acción!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#d33',
                    cancelButtonColor: '#3085d6',
                    confirmButtonText: 'Sí, eliminar',
                    cancelButtonText: 'Cancelar',
                    background: '#1f2937', // Fondo oscuro para combinar con tu tema
                    color: '#fff'
                }).then((result) => {
                    if (result.isConfirmed) {
                        this.submit(); // Si dice que sí, enviamos el formulario
                    }
                });
            });
        });
    </script>
</body>

</html>